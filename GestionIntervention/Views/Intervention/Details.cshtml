@model Intervention

@{
    ViewData["Title"] = "Détails de l'intervention";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Intervention</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numéro
        </dt>
        <dd class="col-sm-10">
            @Model.NumInterv
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.DateInterv.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @Model.Client.Nom @Model.Client.Prenom
        </dd>
        <dt class="col-sm-2">
            Produit
        </dt>
        <dd class="col-sm-10">
            @Model.Produit.Designation
        </dd>
        <dt class="col-sm-2">
            Technicien
        </dt>
        <dd class="col-sm-10">
            @Model.Technicien.Nom @Model.Technicien.Prenom
        </dd>
        <dt class="col-sm-2">
            Prix
        </dt>
        <dd class="col-sm-10">
            @Model.Produit.Prix.ToString("C")
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.NumInterv" class="btn btn-warning">Modifier</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>