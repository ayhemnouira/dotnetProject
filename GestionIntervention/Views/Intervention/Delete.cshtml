@model GestionIntervention.Models.Intervention

@{
    ViewData["Title"] = "Supprimer l'intervention";
}

<h1>@ViewData["Title"]</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette intervention?</h3>
<div>
    <h4>Intervention</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numéro
        </dt>
        <dd class="col-sm-10">
            @Model.NumInterv
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.DateInterv.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @Model.Client.Nom @Model.Client.Prenom
        </dd>
        <dt class="col-sm-2">
            Produit
        </dt>
        <dd class="col-sm-10">
            @Model.Produit.Designation
        </dd>
        <dt class="col-sm-2">
            Technicien
        </dt>
        <dd class="col-sm-10">
            @Model.Technicien.Nom @Model.Technicien.Prenom
        </dd>
        <dt class="col-sm-2">
            Statut
        </dt>
        <dd class="col-sm-10">
            @Model.Statut
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NumInterv" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
