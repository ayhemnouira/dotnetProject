@model GestionIntervention.Models.Client

@{
    ViewData["Title"] = "Supprimer le client";
}

<h1>@ViewData["Title"]</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce client?</h3>
<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Code
        </dt>
        <dd class="col-sm-10">
            @Model.CodeClt
        </dd>
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Model.Nom
        </dd>
        <dt class="col-sm-2">
            Prénom
        </dt>
        <dd class="col-sm-10">
            @Model.Prenom
        </dd>
        <dt class="col-sm-2">
            Adresse
        </dt>
        <dd class="col-sm-10">
            @Model.Adresse
        </dd>
        <dt class="col-sm-2">
            Code Postal
        </dt>
        <dd class="col-sm-10">
            @Model.CP
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodeClt" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>